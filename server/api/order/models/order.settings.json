{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "customer": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "order"
    },
    "restaurant": {
      "model": "restaurant",
      "via": "orders"
    },
    "orderedAt": {
      "type": "datetime"
    },
    "price": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "PLACED",
        "CANCELLED",
        "PROCESSING",
        "IN_ROUTE",
        "DELIVERED",
        "RECEIVED"
      ]
    },
    "orderItems": {
      "collection": "order-item",
      "via": "order"
    }
  }
}
